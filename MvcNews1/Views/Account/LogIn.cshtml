@using MvcNews1.Models
@model LogInViewModel
@{//burada giris sayfasindaki laytou u varsaymamasi icin null yaptik
    Layout = null;
} 
<!--asagidaki html kodlarini hazir olarak indirdigimiz sb-admin den kopyaladik-->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Login - SB Admin</title>
        <link href="css/styles.css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
        <link href="/lib/startbootstrap-sb-admin/dist/css/styles.css" rel="stylesheet"/>
        <!--yukarida indirilen paketin bootstrabini ekledim-->
        
    </head>
    <body class="bg-primary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Kullanıcı Girişi</h3></div>
                                    <div class="card-body">
                                        <form method="post"><!--eger post olarak belirtmezsek get olarak gonderir 
                                            bu da formda yazanlarin url vasiyasiyla gitmesini saglar
                                        -->
                                            <div class="form-floating mb-3">
                                                
                                                <input class="form-control" asp-for="UserName" placeholder="name@example.com" />
                                                <span asp-validation-for=UserName class="text-danger"></span><!--validation mesajinin ana sayfada gorunmesini saglar-->
                                                <label asp-for="UserName"></label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" asp-for="Password" placeholder="Parola" />
                                                <span asp-validation-for="Password" class="text-danger"></span>

                                                <label asp-for="Password"></label>

                                            </div>
                                            <div class="form-check mb-3">
                                                <input class="form-check-input" id="inputRememberPassword" type="checkbox" asp-for="IsPersistent" />
                                                <label asp-for="IsPersistent" class="form-check-label" ></label>
                                            </div>
                                            <div asp-validation-summary="All"></div><!--girilen bilgilerin kullaniciya ait olmadigi
                                                    mesajini gostermek icin kullanilir
                                                -->
                                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                                <a class="small" href="password.html"></a>
                                                <button type="submit" class="btn btn-primary" href="index.html">Giriş Yap</button><!--submiti ekedik-->
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a href="register.html"></a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Your Website 2021</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="/lib/startbootstrap-sb-admin/dist/js/scripts.js"></script>
        <!--yukarida indirdigimiz paketing scriptini iliskilendirdik-->
        <partial name="_ValidationScriptsPartial" />
        <!--yukarida kullanicinin bos veya yanlis bilgi gondermemesi icin 
            indirdigimiz paketin validation ini ekledik
        -->
        
    </body>
</html>
