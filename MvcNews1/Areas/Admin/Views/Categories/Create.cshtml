<h2>Yeni Kategori Ekleme</h2>
<form method="post">
  <div class="mb-3 col-6">
    <label class="form-label" asp-for="Name"></label>
    <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Kategori Adi Giriniz">
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
  <div class="form-check col-6" >
  <input class="form-check-input" type="checkbox" asp-for="Enabled">
  <label class="form-check-label" asp-for="Enabled">
  </label>
</div>
<hr />
<button type="submit" class="btn btn-primary">Kaydet</button>
<a class="btn btn-link" asp-action="Index">Iptal</a>
</form>

