@{
    Layout = null;
}
     <link href="~/lib/startbootstrap-sb-admin/dist/css/styles.css" rel="stylesheet" />
     <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
  <form method="post" class="row-3" >


      

<div class="container">

    <div class="row justify-content-center">     
      <div class="col-6 justify-content-center">
          <label for="exampleFormControlTextarea3"><h3>Haber Ekleme</h3></label>
      </div>
   </div>
    

   <div class="row justify-content-center">



    <div class="form-group justify-content-center col-8" >
           <input class="form-control form-control-lg w-50" asp-for="HeadLine" type="text" placeholder="Haber Basligi" aria-label=".form-control-lg example">
    </div>

    <div class="row" style="height:500px">
        <div class="col-9" style="height:500px">
            <textarea class="form-control" style="height:500px" asp-for="Content" id="exampleFormControlTextarea3" rows="7"></textarea>        
        </div>
        <div class="col-3 justify-content-center">
            <label for="formFileLg" class="form-label " asp-for="Photo"><h4>Resim Yukle</h4></label>
              <input class="form-control form-control-lg col-md-4" id="formFileLg" asp-for="Photo" type="file">

              <div class=" form-check float-end ">
                <input class="form-check-input " type="checkbox" value="" id="flexCheckIndeterminate" asp-for="IsArticle">
                <label class="form-check-label " for="flexCheckIndeterminate" asp-for="IsArticle">
                Makale
                </label>
              </div>
              
                 <select class="form-select" asp-for="Category"  aria-label="Default select example">
                 <option selected></option>
                 <option value="1"></option><!--TODO:YAZDIGIM KATEGORILERI BAGLAYAMIYORUM-->
      
                 </select>
              
                 <div class=" text-end p-2">
                   <button type="submit" class="btn btn-primary border ">Kaydet</button>
                   <a class="btn btn-link" asp-action="Index">Iptal</a>
                 </div>
         </div>

   </div>
</div>
</div>
</form>